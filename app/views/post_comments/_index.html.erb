<% article.post_comments.each do |post_comment| %>
  <p>
    <%= link_to(post_comment.user) do%>
      <%= image_tag post_comment.user.get_image("100x100") %><br>
      <%= post_comment.user.name %>
    <% end %>
    <%= post_comment.comment %>
    <!--ログインユーザーが投稿したコメントであれば削除ボタンを表示-->
    <% if post_comment.user == current_user %>
      <%= link_to "コメント削除", article_post_comment_path(post_comment.article, post_comment), method: :delete %>
    <% end %>
  </p>
<% end %>
