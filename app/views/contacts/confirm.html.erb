<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-2">
<table>
  <tbody>
    <tr>
      <td class="pt-5 pb-2" style="width: 30%;">お名前</td>
      <td class="pt-5 pb-2 pl-3"><%= @contact.name %></td>
    </tr>
    <tr>
      <td class="pb-2" style="width: 30%;">メールアドレス</td>
      <td class="pb-2 pl-3"><%= @contact.email %></td>
    </tr>
    <tr>
      <td class="pb-2" style="width: 30%;">件名</td>
      <td class="pb-2 pl-3"><%= @contact.subject %></td>
    </tr>
    <tr>
      <td class="pb-2">メッセージ</td>
      <td class="pb-2 pl-3" style="white-space: pre-wrap;"><%= @contact.message %></td>
    </tr>
  </tbody>
</table>

<%= form_with model: @contact, url: contacts_path, local: true do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div><%= f.submit '送信', class: "btn btn-success mt-3 mb-3" %></div>
<% end %>

<%= form_with model: @contact, url: back_path, local: true do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div><%= f.submit '入力画面に戻る', class: "btn btn-warning mb-3" %></div>
<% end %>
    </div>
  </div>
</div>