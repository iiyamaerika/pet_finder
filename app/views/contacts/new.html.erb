<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-2">
      <%= form_with model: @contact, url: confirm_path, local: true do |f| %>
        <div class="form-group mt-5 mb-2">
          <%= f.label :name, 'お名前*' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
      
        <div class="form-group mb-2">
          <%= f.label :email, 'メールアドレス*' %>
          <%= f.email_field :email, size: '10x10', class: 'form-control' %>
        </div>
      
        <div class="form-group mb-2">
          <%= f.label :subject, '件名*' %>
          <%= f.text_field :subject, size: '10x10', class: 'form-control' %>
        </div>
      
        <div class="form-group mb-2">
          <%= f.label :message, 'メッセージ*' %>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>
      
        <div class="mt-4 mb-5">
          <%= f.submit '入力内容確認', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>