<% if model.errors.any? %>
  <div class="alert alert-warning">
    <%= model.errors.count %>件のエラーが発生しました
    <ul>
       <button type="button" class="close" data-dismiss="alert">&times;</button>
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

