<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white">


    <div class="container-fluid">
      <a class="navbar-brand p-3" href="/"><%= image_tag 'logo.png', size: '300x100' %></a>


    <div class="header-name text-dark">
      <% if user_signed_in? %>
        ようこそ、<%= current_user.name %>さん！
      <% end %>
    </div>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

          <% if user_signed_in? %>
          <button class="btn btn-link" type="button">
            <%= link_to user_path(current_user.id), class: "nav-link", method: :get do %>
              マイページ<i class="fas fa-user"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to articles_path, class: "nav-link", method: :get do %>
              掲示板<i class="fas fa-paper-plane"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to users_path, class: "nav-link", method: :get do %>
              保護施設<i class="fas fa-home"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to new_article_path, class: "nav-link", method: :get do %>
              新規投稿<i class="far fa-plus-square"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to edit_user_registration_path(current_user.id), class: "nav-link", method: :get do %>
              会員情報編集<i class="fas fa-edit"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to article_favorites_path(current_user.id), class: "nav-link", method: :get do %>
              いいね<i class="fas fa-thumbs-up"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to user_followings_path(current_user.id), class: "nav-link", method: :get do %>
              フォロー<i class="fas fa-user-friends"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to chats_path, class: "nav-link", method: :get do %>
              DM<i class="fas fa-comments"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <% if unchecked_notifications.any? %>
              <i class="fas fa-circle" style="color: gold;"></i>
            <% end %>
          
            <%= link_to notifications_path, class: "nav-link", method: :get do %>
              通知<i class="fas fa-bell"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to destroy_user_session_path, method: :delete, data: { confirm: 'ログアウトしますか？' }, class: "nav-link" do %>
              ログアウト<i class="fas fa-sign-out-alt"></i>
            <% end %>
          </button>
          
          <% else %>

          <button class="btn btn-link" type="button">
            <%= link_to articles_path, class: "nav-link", method: :get do %>
              掲示板<i class="fas fa-paper-plane"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to users_path, class: "nav-link", method: :get do %>
              保護施設<i class="fas fa-home"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to about_path, class: "nav-link", method: :get do %>
              About<i class="fas fa-smile"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to new_user_registration_path, class: "nav-link", method: :get do %>
              新規登録<i class="fas fa-user-plus"></i>
            <% end %>
          </button>
          <button class="btn btn-link" type="button">
            <%= link_to new_user_session_path, class: "nav-link", method: :get do %>
              ログイン<i class="fas fa-sign-in-alt"></i>
            <% end %>
          </button>
          
          <% end %>
        </ul>
      </div>

  
  <%= search_form_for @q, url: searches_search_path, class: "search-form" do |f| %>
  <%= f.search_field :title_or_introduction_or_animal_breed_or_place_or_animal_type_cont, placeholder: 'キーワードから探す' %>
    <%= f.button type: "submit" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>

    </div>
  </nav>
</header>
