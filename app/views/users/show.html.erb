<h1>マイページ</h1>

<h2>ユーザー情報</h2>
  <div>
    <%= image_tag @user.get_image("200x300") %>
    <p>名前：<%= @user.name %></p>
    <p>サイト登録日<%= @user.created_at.strftime('%Y/%m/%d') %></p>
  </div>

<h2>ユーザーの投稿</h2>
<% @articles.each do |article| %>
  <div>
    <%= link_to article_path(article.id) do %>
      <%= image_tag article.get_image("200x300") %>
    <% end %>
    <%= article.status_i18n %>
    <%= article.title %>
    <%= article.place %>
    <%= article.introduction %>
    <%= article.created_at.strftime('%Y/%m/%d') %>
  </div>
<% end %>