  <div>
    <div class="mt-2 mb-2">
      <%= image_tag user.get_image("200x300"), class: "rounded-circle" %>
    </div>
    <p>カテゴリー：<%= user.category_i18n %></p>
    <p>名前：<%= user.nickname %></p>
    <p>フォロー数：
      <%= link_to user_followings_path(user) do %>
        <%= user.followings.count %>
      <% end %>
    </p>
    <p>フォロワー数：
      <%= link_to user_followers_path(user) do %>
        <%= user.followers.count %>
      <% end %>
    </p>
    <p>サイト登録日<%= user.created_at.strftime('%Y/%m/%d') %></p>
  <%  unless user.admin %>
    <% if user == current_user %>
      <%= link_to "会員情報変更", edit_user_registration_path, class: "btn btn-sm btn btn-primary" %>
    <% else %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-success" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success" %>
      <% end %>
    <% end %>
  <% end %>

  <% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
    <%= link_to 'chatを始める', chat_path(user.id) %>
  <% end %>
  </div>
