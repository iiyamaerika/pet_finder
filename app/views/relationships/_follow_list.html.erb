<% if users.exists? %>
  <% users.each do |user| %>
  <table>
    <thead>
      <tr>
        <th>名前</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to '詳細ページへ', user_path(user) %></td>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-success" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>