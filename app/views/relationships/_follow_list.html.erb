<% if users.exists? %>
  <table>
    <thead>
      <tr>
        <th>名前</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
      <tr>
        <td><%= link_to chat_path(user) do %>
            <%= image_tag user.get_image("200x300") %><br>
            <%= user.name %>
            <% end %>
        </td>
        <td><%= link_to '詳細ページへ', user_path(user) %></td>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>